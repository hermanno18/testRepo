{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block main %}


    <main class="page blog-post">
        <section class="clean-block clean-post dark">
            <div class="container">
                <div class="block-content">
                    <div class="post-image" style="background-image:url(&quot; {{asset(article.image)}} &quot;);"></div>
                    <div class="post-body">
                        <h3>{{article.titre}}</h3>
                        <div class="post-info"><span>by {{article.User.pseudo}}</span><span>{{article.createdAt|date('D d F Y')}}</span></div>
                        {{ article.content|raw }}
                        <hr>
                        {{article.reacts.likes }}
                    <p class="text-center">Partager cet article sur les réseaux</p>

                    </div>
                </div>
                <div class="block-content mt-2 p-5">
                    <div class="text-center mb-5"> <h2>Vous aimeré aussi :</h2></div>
                    <div class="row">
                        <div class="col-md-4">
                                <img src="{{asset(article.image)}}" style="width: 100%; height:80%; ">
                            <p> {{article.titre}} </p>
                        </div>
                        <div class="col-md-4">
                                <img src="{{asset(article.image)}}" style="width: 100%; height:80%; ">
                            <p> {{article.titre}} </p>
                        </div>
                        <div class="col-md-4">
                                <img src="{{asset(article.image)}}" style="width: 100%; height:80%; ">
                            <p> {{article.titre}} </p>
                        </div>
                    </div>
                </div>
                <div class="block-content mt-2 p-4">
                    <div class="text-center mb-5"> <h2>Vous aimeré aussi :</h2></div>
                    {{ include ("comment/_form.html.twig", {article: article.id, form: comment_form} )   }}
                     <hr>
                     la liste des commentaires ^récendents:
                     {% for comment in article.comments %}
                        {{ include ("comment/_show.html.twig", {article: article.id})   }}
                     {% endfor %}
                </div>
            </div>
        </section>
    </main>
 
{% endblock %}
